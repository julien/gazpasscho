{namespace Home}

/**
 * This renders the component's whole content.
 * Note: has to be called ".render".
 */
{template .render}
	<div>
		Select Database
		<form data-onsubmit="_submitHandler">
			<div class="form-group">
				<label for="databaseFile">Database File</label>
				<input type="text" class="form-control" id="databaseFile" placeholder="Database File">
				<button data-onclick="_selectFileHandler" type="button">Select File</button>
			</div>

			<div class="form-group">
				<label for="databasePassword">Database Password</label>
				<input type="password" class="form-control" id="databasePassword" placeholder="Database Password">
			</div>

			<button type="submit" class="btn btn-default">Submit</button>
		</form>
	</div>
{/template}
